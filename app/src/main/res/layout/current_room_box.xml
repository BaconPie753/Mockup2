<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp" android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/roomName" android:textColor="#060404" android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/statusImg"
        android:layout_toEndOf="@+id/statusImg"
        android:layout_marginStart="80dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/statusImg"
        android:background="@drawable/circle_gray"
        android:adjustViewBounds="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="42dp"
        android:layout_marginStart="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Vorlesung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roomInfo"
        android:layout_below="@+id/roomName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"
        android:backgroundTint="@android:color/darker_gray" />

</RelativeLayout >
