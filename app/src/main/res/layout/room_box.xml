<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/statusImg"
        android:layout_margin="10dp"
        android:background="@drawable/circle_gray"
        android:adjustViewBounds="false" />

    <TextView
        android:text="Vorlesung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomName"
        android:layout_alignEnd="@+id/roomName"
        android:id="@+id/roomInfo"
        android:backgroundTint="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/roomName" android:textColor="#060404" android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/statusImg"
        android:layout_toEndOf="@+id/statusImg"
        android:layout_marginStart="80dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/statusImg"
        android:layout_toEndOf="@+id/roomName"
        android:layout_marginStart="66dp"
        android:background="@drawable/navicon"
        android:id="@+id/navButton"
        android:elevation="0dp"
        android:layout_marginTop="10dp" />
</RelativeLayout >
